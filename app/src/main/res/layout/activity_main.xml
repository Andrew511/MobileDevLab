<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wregea63.myapplication.MainActivity">

    <TextView
        android:id="@+id/fieldCard1"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorPrimary"
        android:text="DisplayCard1"
        app:layout_constraintBaseline_toBaselineOf="@+id/fieldCard2"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBaseline_creator="1" />

    <TextView
        android:id="@+id/fieldCard2"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:background="@color/colorPrimary"
        android:text="DisplayCard2"
        app:layout_constraintLeft_toRightOf="@+id/fieldCard1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/card1"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorPrimary"
        android:text="Card1"
        app:layout_constraintBaseline_toBaselineOf="@+id/card2"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBaseline_creator="1" />

    <TextView
        android:id="@+id/card2"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="239dp"
        android:background="@color/colorPrimary"
        android:text="Card2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/card1"
        app:layout_constraintTop_toBottomOf="@+id/fieldCard2"
        app:layout_constraintVertical_bias="0.96"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/card3"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/colorPrimary"
        android:text="Card3"
        app:layout_constraintBaseline_toBaselineOf="@+id/card2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/card2"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:id="@+id/scoreboard"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_dark"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.971"
        app:layout_constraintLeft_toRightOf="@+id/fieldCard2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01">

        <TextView
            android:id="@+id/player1Score"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.06"
            android:gravity="center"
            android:text="8"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="visible"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/player2Score"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_weight="0.06"
            android:gravity="center"
            android:text="5"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@android:color/holo_green_light"
            android:visibility="visible"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="28dp" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mathWarArea"
        android:layout_width="351dp"
        android:layout_height="232dp"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toBottomOf="@+id/fieldCard1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="328dp"
            android:layout_height="136dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Math Problem"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:editable="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Answer"
            android:layout_marginStart="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <Button
            android:id="@+id/button"
            android:layout_width="92dp"
            android:layout_height="56dp"
            android:text="@string/submit"
            app:layout_constraintLeft_toRightOf="@+id/editText"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
